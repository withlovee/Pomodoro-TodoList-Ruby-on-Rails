  <tr id="<%= dom_id(task) %>">
    <td><%= best_in_place task, :name %></td>
    <td><%= best_in_place task, :priority %></td>
    <td><%= task.due %></td>
    <td><%= task.estimate %></td>
    <td><%= task.use %></td>
    <td><%= task.status %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
