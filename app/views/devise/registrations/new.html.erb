<div class="login">
  <div class="login-screen">
    <div class="login-icon">
      <img src="<%= asset_path 'Watches.png' %>" alt="Welcome to Mail App">
      <h4>Sign up</h4>
    </div>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="login-form">
      <div class="form-group">
        <%= f.email_field :email, 
        :autofocus => true, 
        :class => 'form-control login-field', 
        :placeholder => 'youremail@gmail.com' %>
        <label class="login-field-icon fui-user" for="user_email"></label>
      </div>

      <div class="form-group">
        <%= f.password_field :password,
        :class => 'form-control login-field', 
        :placeholder => 'Password' %>
        <label class="login-field-icon fui-lock" for="user_password"></label>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation,
        :class => 'form-control login-field', 
        :placeholder => 'Confirm password' %>
        <label class="login-field-icon fui-lock" for="user_password_confirmation"></label>
      </div>
      <%= f.submit "Sign up", :class => 'btn btn-primary btn-lg btn-block' %>
      <div class="login-link">
        <%= render "devise/shared/links" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
